{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "QA Request Input Schema",
  "description": "Schema for validating QA generation requests",
  "properties": {
    "topic": {
      "type": "string",
      "description": "The topic for QA generation",
      "minLength": 1,
      "maxLength": 500
    },
    "complexity": {
      "type": "number",
      "description": "Complexity level from 1-10",
      "minimum": 1,
      "maximum": 10
    },
    "count": {
      "type": "number",
      "description": "Number of QA pairs to generate",
      "minimum": 1,
      "maximum": 50,
      "default": 5
    },
    "domainContext": {
      "type": "string",
      "description": "Domain-specific context",
      "enum": [
        "general",
        "education",
        "business",
        "technical",
        "medical",
        "legal"
      ],
      "default": "general"
    },
    "qualityTarget": {
      "type": "number",
      "description": "Quality target from 1-10",
      "minimum": 1,
      "maximum": 10,
      "default": 8
    }
  },
  "required": ["topic"],
  "additionalProperties": false
}
