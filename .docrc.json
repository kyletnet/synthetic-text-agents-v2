  "driftDetection": {
    "enabled": true,
    "checkOnCommit": true,
    "checkOnCI": true,
    "thresholds": {
      "warningDays": 7,
      "errorDays": 30
    },
    "autoArchive": {
      "enabled": true,
      "afterDays": 90
    }
  },

  "notifications": {
    "driftDetected": {
      "channels": ["console", "file"],
      "recipients": ["architecture-team"]
    },
    "documentExpiring": {
      "channels": ["console"],
      "daysBeforeExpiry": 7
    }
  },

  "rules": {
    "requireOwner": true,
    "requireRelatedCode": true,
    "requireReviewCycle": true,
    "enforceExpiryForIssueTracking": true
  }
