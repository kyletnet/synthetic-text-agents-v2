{
  "version": "1.0.0",
  "profiles": {
    "dev": {
      "description": "Development profile - lenient thresholds for rapid iteration",
      "thresholds": {
        "min_pass_rate": 0.8,
        "min_mean_score": 0.75,
        "max_p50_latency_ms": 5000,
        "max_p95_latency_ms": 10000,
        "min_cases_total": 5
      },
      "tolerance": {
        "pass_rate": 0.05,
        "mean_score": 0.05,
        "p50_ms": 0.2,
        "p95_ms": 0.2
      }
    },
    "stage": {
      "description": "Staging profile - stricter thresholds approaching production",
      "thresholds": {
        "min_pass_rate": 0.9,
        "min_mean_score": 0.8,
        "max_p50_latency_ms": 3000,
        "max_p95_latency_ms": 8000,
        "min_cases_total": 15
      },
      "tolerance": {
        "pass_rate": 0.03,
        "mean_score": 0.03,
        "p50_ms": 0.15,
        "p95_ms": 0.15
      }
    },
    "prod": {
      "description": "Production profile - strict thresholds for quality assurance",
      "thresholds": {
        "min_pass_rate": 0.95,
        "min_mean_score": 0.85,
        "max_p50_latency_ms": 2000,
        "max_p95_latency_ms": 5000,
        "min_cases_total": 25
      },
      "tolerance": {
        "pass_rate": 0.02,
        "mean_score": 0.02,
        "p50_ms": 0.1,
        "p95_ms": 0.1
      }
    }
  },
  "gating": {
    "enabled": true,
    "p0_criteria": [
      "pass_rate < min_pass_rate",
      "cases_total < min_cases_total"
    ],
    "p1_criteria": [
      "mean_score < min_mean_score",
      "p95_ms > max_p95_latency_ms"
    ],
    "p2_criteria": [
      "p50_ms > max_p50_latency_ms"
    ]
  },
  "reporting": {
    "output_dir": "./reports",
    "formats": ["jsonl", "md"],
    "include_full_data": true,
    "enable_schema_validation": true
  },
  "execution": {
    "default_profile": "dev",
    "smoke_test_cases": 5,
    "full_test_cases": 25,
    "timeout_ms": 30000,
    "retry_count": 3
  },
  "duplication_metrics": {
    "ngram_range": [2, 3, 4],
    "similarity_thresholds": {
      "jaccard": 0.3,
      "cosine": 0.7
    },
    "max_pairs_for_llm_judge": 10,
    "budget_caps": {
      "llm_judge_max_usd": 0.50
    },
    "alert_thresholds": {
      "duplication_rate_max": 0.15,
      "semantic_duplication_rate_max": 0.10
    }
  },
  "coverage_metrics": {
    "entity_extraction": {
      "method": "rake_ngram",
      "top_k": 20,
      "min_phrase_length": 1,
      "max_phrase_length": 3
    },
    "section_mapping": {
      "min_evidence_length": 50,
      "section_overlap_threshold": 0.3
    },
    "alert_thresholds": {
      "entity_coverage_rate_min": 0.5,
      "section_coverage_rate_min": 0.5,
      "uncovered_important_entities_max": 10
    }
  },
  "evidence_quality": {
    "hit_rate": {
      "required_fields": ["evidence"]
    },
    "snippet_alignment": {
      "similarity_method": "ngram_jaccard",
      "min_similarity": 0.3,
      "ngram_overlap_weight": 0.7,
      "embedding_weight": 0.3
    },
    "alert_thresholds": {
      "evidence_presence_rate_min": 0.7,
      "snippet_alignment_mean_min": 0.6,
      "snippet_alignment_p95_min": 0.5
    }
  },
  "hallucination_detection": {
    "max_rate": 0.05,
    "confidence_threshold": 0.8,
    "alert_thresholds": {
      "rate_max": 0.03
    }
  },
  "pii_license_scan": {
    "pii_patterns": ["\\b\\d{3}-\\d{2}-\\d{4}\\b", "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b", "\\b\\d{3}[-.]?\\d{3}[-.]?\\d{4}\\b", "\\b\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}\\b"],
    "license_keywords": ["MIT License", "GPL", "Apache License", "BSD", "Copyright", "All rights reserved"],
    "alert_thresholds": {
      "pii_hits_max": 0,
      "license_risk_hits_max": 0
    }
  },
  "qtype_distribution": {
    "patterns": {
      "factual": ["what is", "who is", "when did", "where is", "which", "define"],
      "analytical": ["why", "how does", "analyze", "compare", "evaluate", "explain"],
      "procedural": ["how to", "steps", "process", "procedure", "method"],
      "comparative": ["difference", "compare", "versus", "vs", "better", "worse"]
    },
    "target_distribution": {
      "factual": 0.3,
      "analytical": 0.3,
      "procedural": 0.2,
      "comparative": 0.2
    },
    "alert_thresholds": {
      "imbalance_score_max": 0.8,
      "missing_categories_max": 2
    }
  }
}