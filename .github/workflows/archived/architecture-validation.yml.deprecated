name: Architecture Validation

on:
  pull_request:
    branches: [main, develop]
  push:
    branches: [main, develop]

jobs:
  validate-architecture:
    name: Validate Architecture Invariants
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Run Architecture Invariants Validator
        run: npm run arch:validate
        env:
          CI: true

      - name: Check Design Principles
        run: npm run design:validate
        env:
          DESIGN_VALIDATOR_ENFORCE: true
          CI: true

      - name: TypeScript Compilation
        run: npm run typecheck

      - name: Migration Status Check
        run: |
          echo "ðŸ“Š Migration Progress:"
          npm run migration:status || echo "No migrations in progress"

      - name: Comment PR with Results
        if: failure() && github.event_name == 'pull_request'
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.name,
              body: `## ðŸ”’ Architecture Validation Failed

            This PR violates architecture invariants and cannot be merged.

            **Next steps:**
            1. Run \`npm run arch:validate\` locally to see violations
            2. Fix all P0 violations
            3. Push changes and re-run CI

            **Quick fixes:**
            - \`npm run arch:fix\` (auto-fix some violations)
            - \`npm run design:validate\` (check design principles)

            For help, see: \`docs/ENVIRONMENT_DETECTION_ANALYSIS.md\`
            `
            })
