{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-export",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*"
  ]
}
