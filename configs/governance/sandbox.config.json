    "blocked_paths": [
      "/Users/kyle/synthetic-text-agents-v2/src",
      "/Users/kyle/synthetic-text-agents-v2/node_modules"
    ]
  },
  "alerts": {
    "cpu_spike": {
      "threshold_percent": 25,
      "duration_ms": 1000,
      "action": "warn"
