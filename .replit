# QA Generation System - Replit Configuration
modules = ["nodejs-20", "bash"]

[deployment]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3001
externalPort = 80

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", ".env"]

run = "npm install && npm run build && npm run dev"

[env]
NODE_ENV = "development"
DRY_RUN = "true"