# QA Generation System - Replit Configuration
modules = ["nodejs-20", "bash"]

[deployment]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 3002
externalPort = 3002

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

run = "npm run dev"